{% extends 'base.html' %}


{% block content %}

{% if messages %}
            {% for message in messages %}
                <p style="color: red;">{{ message }}</p>
            {% endfor %}
        {% endif %}
<style>
    
        form {
            max-width: 1000px;
            margin: 0 auto;
            padding: 20px;
            border: 1px solid #ccc;
            border-radius: 5px;
            box-shadow: 2px 2px 12px #aaa;
        }
        label {
            font-weight: bold;
        }
        input, select {
            width: 100%;
            padding: 8px;
            margin: 8px 0 16px;
            border: 1px solid #ccc;
            border-radius: 4px;
        }
        button {
            background-color: #4CAF50;
            color: white;
            padding: 10px 15px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }
        button:hover {
            background-color: #45a049;
        }
    </style>
</head>
<body>
<center>
<table width="50%"><tr><td valign="top">
    <h2>User Login</h2><br>
    <form method="POST" action="/login_user/">
        {% csrf_token %}
<table width="100%">

<tr><td>

        <label for="email">Email:</label><br />
        <input type="email" id="email" name="email" required />


<tr><td>

		<label for="email">Password:</label><br />
        <input type="password" id="password" name="password" required />

<tr>        <td>
<br>
		<button type="submit">Login</button>
</table>
    </form>

	</table>



{% endblock %}